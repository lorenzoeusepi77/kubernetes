# ANSIBLE INVENTORY EXAMPLE

# [clustername]
# Create an inventory group with "clustername"
#
[kubernetes]


# [clustername:children]
# The cluster group contains two children groups: master and edge 
#
[kubernetes:children]
kubernetes_master
kubernetes_edge


# [clustername_master]
# The master group should have:
# hostname ansible_ssh_host=IP ADDRESS 
[kubernetes_master]
Master ansible_ssh_host=192.168.234.143


#[clustername_master:vars]
# Insert edge ip address var for cluster init
[kubernetes_master:vars]
master_ip_address=192.168.234.143


# [clustername_edge]
# The master group should have:
# hostname ansible_ssh_host=IP ADDRESS 
[kubernetes_edge]
hostname1 ansible_ssh_host=192.168.234.144
hostname2 ansible_ssh_host=192.168.234.145
hostname3 ansible_ssh_host=192.168.234.146

# IP addresses of edge node for glusterfs cluster
[gfsedge]
192.168.234.144
192.168.234.145
192.168.234.146



# [clustername_edge1]
# The master group should have only edge1:
# hostname ansible_ssh_host=IP ADDRESS 
[kubernetes_edge1]
hostname1 ansible_ssh_host=192.168.234.144

# Specify domain for master and edge nodes
[all:vars]
# domain name var
dns_domain=test.local

# If you need specific kubelet version use below var. Otherwise last stable version will be installed 
#kubectl_version=v1.6.4

# Here "glusterdev_name" you need to specific device name for GlusterFS edge nodes filesystem. 
#glusterdev_name=vdb

# GlusterFS Number of edge nodes
#numedges=3

# Gluster configuration.
#gluster_mount_dir=/glusterfs/volume1
#gluster_brick_dir=/bricks/brick1/brick
#gluster_brick_name=glustervol1